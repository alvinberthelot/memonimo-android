<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action_start_test_game"
        android:id="@+id/btn_new_test_game"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="startTestGame"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action_start_easy_game"
        android:id="@+id/btn_new_easy_game"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="startEasyGame"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action_start_normal_game"
        android:id="@+id/btn_new_normal_game"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="startNormalGame"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action_start_hard_game"
        android:id="@+id/btn_new_hard_game"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="startHardGame"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action_find_game"
        android:id="@+id/btn_game_unfinished"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="findGame"/>

